<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Organizatora</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }
        .container {
            margin-top: 50px;
        }
        .navbar {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Event Management</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/korisnik/feed">Feed</a> <!-- izmijeniti kad budu sesije-->
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/korisnik/moji-eventi">Moji eventi</a> <!-- izmijeniti kad budu sesije-->
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <h1 class="text-center">Profil Organizatora</h1>
    <form action="/organizator/update-profile" method="POST">
        <div class="form-group">
            <label for="ime">Ime</label>
            <input type="text" class="form-control" id="ime" name="ime" value="<%= korisnik.ime %>" required>
        </div>
        <div class="form-group">
            <label for="prezime">Prezime</label>
            <input type="text" class="form-control" id="prezime" name="prezime" value="<%= korisnik.prezime %>" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= korisnik.email %>" required>
        </div>
        <div class="form-group">
            <label for="korisnicko_ime">Korisničko ime</label>
            <input type="text" class="form-control" id="korisnicko_ime" name="korisnicko_ime" value="<%= korisnik.korisnicko_ime %>" required>
        </div>
        <div class="form-group">
            <label for="sifra">Šifra</label>
            <input type="password" class="form-control" id="sifra" name="sifra" required>
        </div>
        <button type="submit" class="btn btn-primary">Spremi</button>
    </form>

    <!-- Korisnikovi interesi -->
    <div class="form-group mt-4">
        <label>Vaši interesi</label>
        <ul>
            <% korisnikovi_interesi.rows.forEach(function(interes) { %>
                <li>
                    <%= interes.naziv_tipa %>
                    <form action="/korisnik/obrisi-interes" method="POST" style="display:inline;">
                        <input type="hidden" name="interes_id" value="<%= interes.id %>">
                        <input type="hidden" name="korisnik_id" value="<%= korisnik.id %>">
                        <button type="submit" class="btn btn-danger btn-sm">x</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>

    <!-- Interesi koje korisnik nije odabrao -->
    <div class="form-group">
        <label for="ne_interesi">Dodajte još interesa</label>
        <ul id="ne_interesi">
            <% korisnikovi_ne_interesi.rows.forEach(function(neInteres) { %>
                <li>
                    <%= neInteres.naziv_tipa %>
                    <form action="/korisnik/dodaj-interes" method="POST" style="display:inline;">
                        <input type="hidden" name="interes_id" value="<%= neInteres.id %>">
                        <input type="hidden" name="korisnik_id" value="<%= korisnik.id %>">
                        <button type="submit" class="btn btn-success btn-sm">Dodaj</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

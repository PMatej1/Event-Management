<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eventi</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }
        .container {
            margin-top: 50px;
        }
        .navbar {
            margin-bottom: 20px;
        }
        .card-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .card {
            width: 60%;
            margin-bottom: 20px;
        }
        .btn-register {
            background-color: #007bff;
            color: #fff;
        }
        .btn-register:hover {
            background-color: #0056b3;
            color: #fff;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Event Management</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/profil">Profil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/events">Eventi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/korisnici">Korisnici</a>
            </li>
            <li><form class="form-inline my-2 my-lg-0" action="/korisnik/rezultati-searcha" method="post">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="kljucnaRijec">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form></li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <h1 class="text-center">Preporučeni eventi</h1>
    <div class="card-wrapper">
        <% recommendedEventi.forEach(function(event) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= event.naziv %></h5>
                    <p class="card-text"><%= event.opis %></p>
                    <p class="card-text"><small class="text-muted">Datum: <%= event.datum %></small></p>
                    <p class="card-text"><small class="text-muted">Lokacija: <%= event.mjesto %></small></p>
                    <p class="card-text"><small class="text-muted">Cijena: <%= event.cijena %> KM</small></p>
                    <a href="/prijavi/<%= event.id %>" class="btn btn-register">Prijavi se</a>
                </div>
            </div>
        <% }) %>
    </div>

    <h2 class="text-center">Najbolje ocijenjeni završeni eventi</h2>
    <div class="card-wrapper">
        <% najbolje_ocijenjeni_zavrseni_eventi.forEach(function(event) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= event.naziv %></h5>
                    <p class="card-text"><%= event.opis %></p>
                    <p class="card-text"><small class="text-muted">Datum: <%= event.datum %></small></p>
                    <p class="card-text"><small class="text-muted">Lokacija: <%= event.mjesto %></small></p>
                    <p class="card-text"><small class="text-muted">Cijena: <%= event.cijena %> KM</small></p>
                    <p class="card-text"><small class="text-muted">Prosječna recenzija: <%= event.prosjek_recenzija %></small></p>
                </div>
            </div>
        <% }) %>
    </div>

    <h2 class="text-center">Najpopularniji eventi</h2>
    <div class="card-wrapper">
        <% najpopularniji_eventi.forEach(function(event) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= event.naziv %></h5>
                    <p class="card-text"><%= event.opis %></p>
                    <p class="card-text"><small class="text-muted">Datum: <%= event.datum %></small></p>
                    <p class="card-text"><small class="text-muted">Lokacija: <%= event.mjesto %></small></p>
                    <p class="card-text"><small class="text-muted">Cijena: <%= event.cijena %> KM</small></p>
                    <p class="card-text"><small class="text-muted">Broj prijava: <%= event.broj_prijava %></small></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eventi</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #1c1c1c;
            color: #ffffff;
        }

        header {
            background-color: #000;
            padding: 20px 0;
            text-align: center;
        }

        header h1 {
            font-size: 36px;
            color: #f15a24;
        }

        nav {
            display: flex;
            justify-content: end;
            text-align: center;
            margin: 20px 0;
        }

        nav a {
            color: #ffffff;
            margin: 0 15px;
            text-decoration: none;
            font-weight: bold;
        }

        nav a:hover {
            color: #f15a24;
        }

        main {
            text-align: center;
            padding: 50px 20px;
        }

        h1,
        h2 {
            color: #f15a24;
        }

        .card-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .card {
            width: 60%;
            margin-bottom: 20px;
            background-color: #333;
            border: 1px solid #f15a24;
        }

        .card-title {
            color: #f15a24;
        }

        .text-muted {
            color: #aaaaaa !important;
        }

        .btn-register {
            background-color: orange;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        .btn-register:hover {
            background-color: darkorange;
        }

        footer {
            background-color: #333;
            padding: 50px 0;
            color: #ffffff;
            text-align: center;
        }

        footer h3 {
            font-size: 32px;
            color: #f15a24;
            margin-bottom: 20px;
        }

        footer p {
            font-size: 16px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>

<body>
<header>
    <h1>Event Management</h1>
</header>
<nav class="navbar navbar-expand-lg">
    <a class="navbar-brand" href="/">Event Management</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/profil">Profil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/events">Eventi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/korisnici">Korisnici</a>
            </li>
            <li>
                <form class="form-inline my-2 my-lg-0" action="/korisnik/rezultati-searcha" method="post">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="kljucnaRijec">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
            </li>
        </ul>
    </div>
</nav>

<main>
    <h1 class="text-center">Preporučeni eventi</h1>
    <div class="card-wrapper">
        <% recommendedEventi.forEach(function(event) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= event.naziv %></h5>
                    <p class="card-text"><%= event.opis %></p>
                    <p class="card-text"><small class="text-muted">Datum: <%= event.datum %></small></p>
                    <p class="card-text"><small class="text-muted">Lokacija: <%= event.mjesto %></small></p>
                    <p class="card-text"><small class="text-muted">Cijena: <%= event.cijena %> KM</small></p>
                    <a href="/prijavi/<%= event.id %>" class="btn btn-register">Prijavi se</a>
                </div>
            </div>
        <% }) %>
    </div>

    <h2 class="text-center">Najbolje ocijenjeni završeni eventi</h2>
    <div class="card-wrapper">
        <% najbolje_ocijenjeni_zavrseni_eventi.forEach(function(event) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= event.naziv %></h5>
                    <p class="card-text"><%= event.opis %></p>
                    <p class="card-text"><small class="text-muted">Datum: <%= event.datum %></small></p>
                    <p class="card-text"><small class="text-muted">Lokacija: <%= event.mjesto %></small></p>
                    <p class="card-text"><small class="text-muted">Cijena: <%= event.cijena %> KM</small></p>
                    <p class="card-text"><small class="text-muted">Prosječna recenzija: <%= event.prosjek_recenzija %></small></p>
                </div>
            </div>
        <% }) %>
    </div>

    <h2 class="text-center">Najpopularniji eventi</h2>
    <div class="card-wrapper">
        <% najpopularniji_eventi.forEach(function(event) { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= event.naziv %></h5>
                    <p class="card-text"><%= event.opis %></p>
                    <p class="card-text"><small class="text-muted">Datum: <%= event.datum %></small></p>
                    <p class="card-text"><small class="text-muted">Lokacija: <%= event.mjesto %></small></p>
                    <p class="card-text"><small class="text-muted">Cijena: <%= event.cijena %> KM</small></p>
                    <p class="card-text"><small class="text-muted">Broj prijava: <%= event.broj_prijava %></small></p>
                </div>
            </div>
        <% }) %>
    </div>
</main>

<footer>
    <h3>Kontakt</h3>
    <p>Adresa: XYZ ulica, Grad</p>
    <p>Email: kontakt@eventmanagement.com</p>
    <div class="icon">
        <span>FB</span>
        <span>TW</span>
        <span>IG</span>
    </div>
</footer>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
